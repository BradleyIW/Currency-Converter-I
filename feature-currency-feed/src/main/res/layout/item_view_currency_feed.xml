<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/currency_item_height"
    android:background="@android:color/white"
    android:padding="4dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_image_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/item_image_guideline_percentage" />

    <androidx.emoji.widget.EmojiTextView
        android:id="@+id/currency_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:textColor="@color/black"
        android:textSize="@dimen/currency_flag_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/item_image_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="ðŸ‡ªðŸ‡º" />

    <TextView
        android:id="@+id/currency_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/currency_title_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/currency_description"
        app:layout_constraintStart_toStartOf="@+id/item_image_guideline"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="EUR" />

    <TextView
        android:id="@+id/currency_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="US dollar"
        android:textSize="@dimen/currency_subtitle_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_image_guideline"
        app:layout_constraintTop_toBottomOf="@+id/currency_title"
        tools:text="Euro" />

    <EditText
        android:id="@+id/currency_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:digits="0123456789."
        android:hint="0.00"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:textSize="@dimen/currency_input_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/currency_description"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="100" />

</androidx.constraintlayout.widget.ConstraintLayout>